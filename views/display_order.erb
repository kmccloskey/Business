<div><%= "<span class='user'>Address:</span> " + @user.address %></div>
<div><%= "<span class='user'>City:</span> " + @user.city %></div>
<div><%= "<span class='user'>Zip Code:</span> " + @user.zip_code %></div>
<div><%= "<span class='user'>Email:</span> " + @user.email %></div>
</div>

